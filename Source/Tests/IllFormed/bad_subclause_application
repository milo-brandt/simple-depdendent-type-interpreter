# TEST BEGIN
# TEST NAME A pattern with an application of a capture to a non-function is not accepted.
# TEST FULL_SET compile_result

block {
  axiom Nat : Type;
  axiom zero : Nat;
  axiom succ : Nat -> Nat;

  declare pred : Nat -> Nat;
  pred zero = zero;
  pred (succ n) = n;

  declare f : Nat -> Nat;
  f x
    where x = zero y
  = y;

  f zero
}

# TEST DEFINITION

REQUIRE(compile_result.holds_success());
REQUIRE(!compile_result.get_value().is_okay());
